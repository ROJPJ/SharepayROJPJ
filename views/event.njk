{% extends "layout.njk" %}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6">
      <table class="table  table-striped">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Add Update event</th>
          </tr>
        </thead>
        <tbody>
          {% for row in rows %}
          <tr>
            <td>
              <h3>{{row.label}}</h3><p><small>{{row.description}}</small></p>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
        <button type="button" class="btn btn-primary btn-lg">Save</button>
      <a href="#"><h3>{{row.label}}</h3>
        <button type="button" class="btn btn-primary btn-lg">Cancel</button>
      </a><p><small>{{row.description}}</small></p>
      <a href="#"><h3>{{row.label}}</h3>
        <button type="button" class="btn btn-primary btn-lg">Close</button>
      </a><p><small>{{row.description}}</small></p>
      <a href="#"><h3>{{row.label}}</h3>
        <button type="button" class="btn btn-primary btn-lg">Paid</button>
      </a><p><small>{{row.description}}</small></p>
    </div>
    <div class="col">
    </div>
  </div>
</div>
{% endblock %}
