{% extends "layout.njk" %}

{% block content %}
<div class="container">
  <div class="row">
    <div class="col">
    </div>
    <div class="col-6">
      <table class="table  table-striped">
        <thead class="thead-dark">
          <tr>
            <th scope="col">Balance</th>
          </tr>
        </thead>
        <tbody>
          {% for row in rows %}
          <tr>
            <td>
              {# <p><small>{{row.from}} MUST PAY {{row.value}} TO {{row.to}}</small> #}
              <p><small>{{row.fromName}} MUST PAY {{row.value}} TO {{row.toName}}</small>
            </td>
          </tr>
          {% endfor %}
        </tbody>
      </table>
      <a href="event/new"><h3>{{row.label}}</h3>
        <button type="button" class="btn btn-primary btn-lg">Add</button>
      </a><p><small>{{row.description}}</small></p>
    </div>
    <div class="col">
    </div>
  </div>
</div>
{% endblock %}
